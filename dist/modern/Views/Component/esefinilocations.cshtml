@section styles {
    <!-- Plugin css -->
    <link href="~/lib/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" type="text/css">
}

<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Locations</h4>
                        <div class="mb-2">
                            <div class="row row-cols-sm-auto g-2 align-items-center">
                                <div class="col-12 text-sm-center">
                                    <button type="button" class="btn btn-primary waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#con-close-modal"><i class="mdi mdi-plus-circle me-2"></i> Add New</button>

                                </div>
                            </div>
                        </div>
                        <table data-toggle="table" data-page-size="5" data-buttons-class="xs btn-light" data-pagination="true" class="table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th data-field="Address">Address</th>
                                    <th data-field="Location">Location Name</th>
                                    <th data-field="Category">Category</th>
                                    <th data-field="ID">ID</th>
                                    <th data-field="user-status">Status</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Al Jadaf</td>
                                    <td>Emirates Hospital Business Bay</td>
                                    <td>Hospital</td>
                                    <td>1</td>
                                    <td><span class="badge label-table bg-success">Active</span></td>
                                    <td><i class="ti-layout-menu-separated"></i></td>
                                </tr>
                                <tr>
                                    <td>35 B Street</td>
                                    <td>Aster Clinic</td>
                                    <td>Clinics</td>
                                    <td>2</td>
                                    <td><span class="badge label-table bg-success">Active</span></td>
                                    <td><i class="ti-layout-menu-separated"></i></td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div> <!-- end card-->
            </div> <!-- end col-->
        </div>
        <div id="con-close-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Location</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-2">
                        <form>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="example-select" class="form-label">Category Name</label>
                                    <select class="form-select" id="example-select">
                                        <option></option>
                                        <option>Hospital</option>
                                        <option>Clinics</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="inputlocation" class="form-label">Location Name</label>
                                    <input type="text" class="form-control" id="inputlocation" placeholder="Location">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="example-email" class="form-label">Email</label>
                                    <input type="email" id="example-email" name="example-email" class="form-control" placeholder="Email">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="inputmb" class="form-label">Mobile Number</label>
                                    <input type="text" class="form-control" id="inputmb" placeholder="Mobile Number">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="example-webUrl" class="form-label">Website Url</label>
                                    <input type="url" id="example-email" name="example-email" class="form-control" placeholder="Website Url">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="customStatus" class="form-label">Status</label>
                                    <select class="form-select" id="customStatus">
                                        <option></option>
                                        <option>Active</option>
                                        <option>Pending</option>
                                        <option>Suspended</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="search-location" class="form-label">Search Location</label>
                                <input type="search" id="search-location" name="search-location" class="form-control">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d462562.65580727917!2d54.946612256782096!3d25.07575817007864!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5f43496ad9c645%3A0xbde66e5084295162!2sDubai%20-%20United%20Arab%20Emirates!5e0!3m2!1sen!2sin!4v1675538611581!5m2!1sen!2sin"
                                            style="border:0;" width="700" height="200" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary waves-effect" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#success-alert-modal">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Success Alert Modal -->
        <div id="success-alert-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content modal-filled bg-success">
                    <div class="modal-body p-4">
                        <div class="text-center">
                            <i class="dripicons-checkmark h1 text-white"></i>
                            <h6 class="mt-2 text-white">Category Save Successfully!</h6>
                            <button type="button" class="btn btn-light my-2" data-bs-dismiss="modal">Continue</button>
                        </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </div> <!-- container -->

</div>

@section scripts {
    <!-- Plugins -->
    <script src="~/lib/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/js/pages/bootstrap-tables.init.js"></script>
}